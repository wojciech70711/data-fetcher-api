# Example .env for data-api

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Data / CSV
DATA_DIRECTORY=data
CSV_FILENAME_PATTERN={symbol}_ohlcv.csv
CSV_ENCODING=utf-8
CSV_QUOTE_CHAR="
CSV_DELIMITER=,

# Validation
MIN_VOLUME=0
MIN_PRICE=0.00001
MAX_PRICE=1000000

# API metadata
API_TITLE=Cryptocurrency OHLCV Data API
API_VERSION=1.0.0
API_DESCRIPTION=REST API for storing and retrieving OHLCV data from cryptocurrency markets

# Kafka
# For local Docker compose use: kafka:29092
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=ohlcv
